{
  "stage1_coco_classification": {
    "description": "阶段1: COCO分割目标分类预训练",
    "coco_train_images": "../../data/COCO/train2017",
    "coco_train_annotations": "../../data/COCO/annotations/instances_train2017.json",
    "coco_val_images": "../../data/COCO/val2017",
    "coco_val_annotations": "../../data/COCO/annotations/instances_val2017.json",
    "epochs": 10,
    "batch_size": 32,
    "learning_rate": 0.001,
    "min_object_area": 2000,
    "max_objects_per_image": 5
  },
  
  "stage2_voc_detection": {
    "description": "阶段2: VOC目标检测微调",
    "voc_data_path": "../../data/VOC2012",
    "use_voc2007": true,
    "use_voc2012": true,
    "train_val_split": 0.8,
    "class_file": "./voc_classes.txt",
    "epochs": 20,
    "batch_size": 8,
    "learning_rate": 0.0001
  },
  
  "model_config": {
    "input_size": 416,
    "grid_size": 13,
    "num_classes_coco": 80,
    "num_classes_voc": 20,
    "lambda_coord": 5.0,
    "lambda_noobj": 0.1,
    "weight_decay": 0.0005,
    "use_efficient_backbone": true
  },
  
  "training_config": {
    "device": "auto",
    "num_workers": 4,
    "pin_memory": true,
    "save_dir": "./two_stage_checkpoints",
    "log_interval": 10,
    "save_interval": 20
  }
}
